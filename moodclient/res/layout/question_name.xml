<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/bg_sub"
    android:baselineAligned="false"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="5dp" 
        android:background="@drawable/bg_sub_lesser"
        >

        <TextView
            android:id="@+id/groupMood_question_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="99"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/sub_text"
            android:textStyle="bold" 
            />

        <TextView
            android:id="@+id/groupMood_question_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="von 99"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/sub_text" />
    </LinearLayout>
        
    <LinearLayout 
	    android:layout_width="0dp"
	    android:layout_height="fill_parent"
	    android:orientation="vertical"
	    android:layout_weight="7" 
	    android:gravity="center_vertical"
	    >

	    <TextView
	        android:id="@+id/groupMood_question_text"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:gravity="center_vertical"
	        android:text="{question.name}"
	        android:textAppearance="?android:attr/textAppearanceMedium"
	        android:textColor="@color/sub_text"
	        android:layout_margin="5dp"
	        />
	        
	</LinearLayout>	        

</LinearLayout>