<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="44dp"
    android:background="@drawable/bg_actionbar"
    android:orientation="horizontal" >

    <Button
        android:layout_width="109dp"
        android:layout_height="30dp"
        android:layout_margin="6dp"
        android:background="@drawable/headlogo"
        android:id="@+id/groupMood_actionbar_logo"
         />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="right"
        android:orientation="horizontal" >

        <Button
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ic_checkmark_white_tab"
            android:id="@+id/groupMood_actionbar_button_questions"
            />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/bg_actionbar_sep" />

        <Button
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/ic_tab_bubble" 
            android:id="@+id/groupMood_actionbar_button_comments"
            />

        <ImageView
            android:layout_width="1dp"
            android:layout_height="28dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="6dp"
            android:layout_marginRight="6dp"
            android:src="@drawable/bg_actionbar_sep" />

        <Button
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginTop="3dp"
            android:layout_marginRight="3dp"
            android:background="@drawable/ic_tab_chart"
            android:id="@+id/groupMood_actionbar_button_results" 
            />
    </LinearLayout>

</LinearLayout>